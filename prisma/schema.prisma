// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String   @id @default(uuid())
  photo_profile String?
  username      String
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())

  // Relations
  streaks       UserStreak[]
  moodLogs      MoodLog[]
  refreshTokens RefreshToken[]
}

model UserStreak {
  id        String   @id @default(uuid())
  userId    String
  startDate DateTime
  endDate   DateTime
  length    Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id         String   @id @default(uuid())
  userId     String
  token      String   @unique
  revoked    Boolean  @default(false)
  expired_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MoodType {
  id         Int    @id @default(autoincrement())
  moodName   String
  valueScore Int
  iconUrl    String?

  // Relations
  feelingTags        FeelingTag[]
  relaxationContents RelaxationContent[]
  moodLogs           MoodLog[]
}

model FeelingTag {
  id         Int      @id @default(autoincrement())
  moodTypeId Int
  tagName    String
  createdAt  DateTime @default(now())

  // Relations
  moodType MoodType  @relation(fields: [moodTypeId], references: [id], onDelete: Cascade)
  moodLogs MoodLog[]
}

model ContentTag {
  id       Int    @id @default(autoincrement())
  tagName  String
  hexColor String?

  // Relations
  relaxationContents RelaxationContent[]
}

model RelaxationContent {
  id              String  @id @default(uuid())
  moodTypeId      Int
  tagId           Int
  title           String
  description     String
  contentType     String // 'YOUTUBE', 'ARTICLE', etc.
  contentUrl      String
  thumbnailUrl    String?
  durationMinutes Int

  // Relations
  moodType        MoodType   @relation(fields: [moodTypeId], references: [id])
  contentTag      ContentTag @relation(fields: [tagId], references: [id])
  recommendedLogs MoodLog[] // Log dimana konten ini direkomendasikan
}

model MoodLog {
  id                   String   @id @default(uuid())
  userId               String
  moodTypeId           Int
  feelingTagId         Int? // Optional jika user tidak memilih sub-tag
  recommendedContentId String? // Optional jika tidak ada rekomendasi
  journalNote          String?
  logDate              DateTime
  createdAt            DateTime @default(now())

  // Relations
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  moodType           MoodType           @relation(fields: [moodTypeId], references: [id])
  feelingTag         FeelingTag?        @relation(fields: [feelingTagId], references: [id])
  recommendedContent RelaxationContent? @relation(fields: [recommendedContentId], references: [id])

  @@index([userId, logDate])
}
