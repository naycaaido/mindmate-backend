// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum LoginProvider {
  manual
  google
}

model User {
  id             String        @id @default(uuid())
  username       String
  email          String        @unique
  password       String?
  login_provider LoginProvider
  oauth_id       String?
  photo_profile  String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  streaks       UserStreak[]
  moodLogs      MoodLog[]
  refreshTokens RefreshToken[]
}

model UserStreak {
  id        String   @id @default(uuid())
  userId    String
  startDate DateTime
  endDate   DateTime
  length    Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id         String   @id @default(uuid())
  userId     String
  token      String   @unique
  revoked    Boolean  @default(false)
  expired_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ContentTag {
  id       Int     @id @default(autoincrement())
  tagName  String
  hexColor String?

  // Relations
  relaxationContents RelaxationContent[]
}

model RelaxationContent {
  id String @id @default(uuid())

  moodTypeId Int
  tagId      Int?

  title       String
  description String

  modalIntro String @db.Text
  modalSteps Json

  moodType        MoodType    @relation(fields: [moodTypeId], references: [id])
  contentTag      ContentTag? @relation(fields: [tagId], references: [id]) // Opsional
  recommendedLogs MoodLog[]
}

model MoodType {
  id         Int    @id @default(autoincrement())
  moodName   String
  valueScore Int

  feelingTags        FeelingTag[]
  relaxationContents RelaxationContent[]
  moodLogs           MoodLog[]
}

model FeelingTag {
  id         Int      @id @default(autoincrement())
  moodTypeId Int
  tagName    String
  createdAt  DateTime @default(now())

  moodType MoodType @relation(fields: [moodTypeId], references: [id], onDelete: Cascade)

  // Ubah relasi ke tabel perantara
  logTags MoodLogTag[]
}

// 2. Tabel Utama MoodLog
model MoodLog {
  id                   String   @id @default(uuid())
  userId               String
  moodTypeId           Int
  recommendedContentId String?
  journalNote          String?
  logDate              DateTime
  createdAt            DateTime @default(now())

  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  moodType           MoodType           @relation(fields: [moodTypeId], references: [id])
  recommendedContent RelaxationContent? @relation(fields: [recommendedContentId], references: [id])

  moodLogTags MoodLogTag[]

  @@index([userId, logDate])
}

// 3. TABEL KETIGA (Jembatan / Junction Table)
model MoodLogTag {
  id           String @id @default(uuid())
  moodLogId    String
  feelingTagId Int

  moodLog MoodLog @relation(fields: [moodLogId], references: [id], onDelete: Cascade)

  feelingTag FeelingTag @relation(fields: [feelingTagId], references: [id], onDelete: Cascade)

  @@unique([moodLogId, feelingTagId])
  @@map("mood_log_tags")
}
